rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ğŸ” ì‚¬ìš©ì ë¬¸ì„œ ê·œì¹™
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && 
        (resource.data.role == 'counselor' || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'counselor');
    }

    // ğŸ§  ê°œì¸ í”„ë¡œíŒŒì¼ë§ ê²°ê³¼ ê·œì¹™ (ë¯¼ê° ì •ë³´)
    match /profiling_results/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // ìƒë‹´ì‚¬ëŠ” ì½ê¸°ë§Œ ê°€ëŠ¥ (ì‚¬ìš©ì ë™ì˜ ì‹œ)
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'counselor' &&
        get(/databases/$(database)/documents/users/$(userId)).data.settings.shareWithCounselor == true;
    }

    // ğŸ“Š ê°ì • ê¸°ë¡ ê·œì¹™ (ê°œì¸ ë°ì´í„°)
    match /mood_records/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /records/{recordId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        // ê·¸ë£¹ ë©¤ë²„ëŠ” ìš”ì•½ ì •ë³´ë§Œ ì½ê¸° ê°€ëŠ¥
        allow read: if request.auth != null && 
          exists(/databases/$(database)/documents/groups/$(resource.data.groupId)/members/$(request.auth.uid));
      }
    }

    // ğŸ‘¥ ê·¸ë£¹ ê´€ë¦¬ ê·œì¹™
    match /groups/{groupId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/groups/$(groupId)/members/$(request.auth.uid));
      allow write: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || 
         get(/databases/$(database)/documents/groups/$(groupId)/members/$(request.auth.uid)).data.role == 'admin');
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.createdBy;

      // ê·¸ë£¹ ë©¤ë²„ ì„œë¸Œì»¬ë ‰ì…˜
      match /members/{memberId} {
        allow read: if request.auth != null && 
          exists(/databases/$(database)/documents/groups/$(groupId)/members/$(request.auth.uid));
        allow write: if request.auth != null && 
          (get(/databases/$(database)/documents/groups/$(groupId)).data.createdBy == request.auth.uid ||
           get(/databases/$(database)/documents/groups/$(groupId)/members/$(request.auth.uid)).data.role == 'admin');
        allow create: if request.auth != null && 
          (request.auth.uid == memberId || 
           get(/databases/$(database)/documents/groups/$(groupId)).data.createdBy == request.auth.uid);
      }
    }

    // ğŸ“ˆ ê·¸ë£¹ ë¦¬í¬íŠ¸ ê·œì¹™
    match /group_reports/{groupId} {
      match /reports/{reportId} {
        allow read: if request.auth != null && 
          exists(/databases/$(database)/documents/groups/$(groupId)/members/$(request.auth.uid));
        allow write: if false; // ì‹œìŠ¤í…œì—ì„œë§Œ ìƒì„±
      }
    }

    // ğŸ’¬ AI ì±—ë´‡ ì„¸ì…˜ ê·œì¹™
    match /chat_sessions/{sessionId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null && 
          request.auth.uid == get(/databases/$(database)/documents/chat_sessions/$(sessionId)).data.userId;
      }
    }

    // ğŸ“§ ê·¸ë£¹ ì´ˆëŒ€ ê·œì¹™
    match /invitations/{invitationId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.inviterUid || 
         request.auth.email == resource.data.inviteeEmail);
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.inviterUid;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.inviterUid;
      allow update: if request.auth != null && 
        request.auth.email == resource.data.inviteeEmail &&
        request.resource.data.status in ['accepted', 'declined'];
    }

    // ğŸ“Š ê°ì • ë¶„ì„ ë¦¬í¬íŠ¸ ê·œì¹™
    match /mood_analytics/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /monthly_reports/{reportId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ğŸŒ± ê´€ê³„ì˜ ì •ì› ê·œì¹™
    match /gardens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ† ì‚¬ìš©ì í†µê³„ ë° ë±ƒì§€ ê·œì¹™
    match /user_stats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ† ì¹­ì°¬ ë¦´ë ˆì´ ê·œì¹™
    match /praises/{praiseId} {
      allow read: if request.auth != null && 
        (resource.data.fromUserId == request.auth.uid || 
         resource.data.toUserId == request.auth.uid);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.fromUserId;
    }

    // ğŸ¥ ìƒë‹´ ì„¸ì…˜ ê·œì¹™ (ê¸°ì¡´ ìœ ì§€)
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.counselorId == request.auth.uid);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.clientId;
    }

    // ğŸ’¬ ìƒë‹´ ë©”ì‹œì§€ ê·œì¹™ (ê¸°ì¡´ ìœ ì§€)
    match /messages/{messageId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/sessions/$(resource.data.sessionId)) &&
        (get(/databases/$(database)/documents/sessions/$(resource.data.sessionId)).data.clientId == request.auth.uid ||
         get(/databases/$(database)/documents/sessions/$(resource.data.sessionId)).data.counselorId == request.auth.uid);
    }

    // ğŸ“‹ ì‹¬ë¦¬ í…ŒìŠ¤íŠ¸ ê²°ê³¼ ê·œì¹™ (ê¸°ì¡´ ìœ ì§€)
    match /testResults/{resultId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'counselor';
    }

    // ğŸ“¢ ê³µì§€ì‚¬í•­ ê·œì¹™ (ê¸°ì¡´ ìœ ì§€)
    match /notices/{noticeId} {
      allow read: if true;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // â“ FAQ ê·œì¹™ (ê¸°ì¡´ ìœ ì§€)
    match /faqs/{faqId} {
      allow read: if true;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ğŸ‘¨â€âš•ï¸ ìƒë‹´ì‚¬ í”„ë¡œí•„ ê·œì¹™ (ê¸°ì¡´ ìœ ì§€)
    match /counselorProfiles/{profileId} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.uid == profileId &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'counselor';
    }

    // â­ ë¦¬ë·° ë° í‰ì  ê·œì¹™ (ê¸°ì¡´ ìœ ì§€)
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }

    // ğŸ“… ì˜ˆì•½ ê·œì¹™ (ê¸°ì¡´ ìœ ì§€)
    match /appointments/{appointmentId} {
      allow read, write: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.counselorId == request.auth.uid);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.clientId;
    }

    // ğŸ’³ ê²°ì œ ì •ë³´ ê·œì¹™ (ê¸°ì¡´ ìœ ì§€)
    match /payments/{paymentId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }

    // âš™ï¸ ì‹œìŠ¤í…œ ì„¤ì • ê·œì¹™ (ê¸°ì¡´ ìœ ì§€)
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
